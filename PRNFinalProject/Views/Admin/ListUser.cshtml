                                    <tr>
                                        <td>@p.PersonId</td>
                                        <td>@p.Fullname</td>
                                        <td>@p.Gender</td>
                                        <td>@p.Email</td>
                                        
                                        <td><form asp-action="ListUser" method="post" class="tag tag-success"><button type="submit" name="statusid" value="@(p.IsActive==true?"Disable":"Enable")-@(p.PersonId)">@(p.IsActive==true?"Disable":"Enable")</button></form></td>
                                    </tr>
}
                                            </tbody>
