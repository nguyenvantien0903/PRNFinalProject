                                <h2>@ViewData["tgen"]</h2>
                            </div>
                            <div style="background-color: blanchedalmond; border-radius: 15px; margin-right: 30px; text-align: center;">
                                <h3 style="padding:7px 7px 7px 7px;">Tổng User</h3>
                                <h2>@ViewData["tuser"]</h2>
                            </div>
                            <div style="background-color: chartreuse; border-radius: 15px; text-align: center;">
