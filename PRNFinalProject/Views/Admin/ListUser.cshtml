                                        <table class="table table-hover text-nowrap">
                                            <thead>
                                                <tr>
                                                    <th>PersonId</th>
                                                    <th>FullName</th>
                                                    <th>Gender</th>
                                                    <th>Email</th>
                                                    
                                                    <th>IsActive</th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Person p in (List<Person>)ViewData["user"])
