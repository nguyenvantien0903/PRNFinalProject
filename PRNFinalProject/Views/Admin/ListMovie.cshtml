@model IEnumerable<PRNFinalProject.Models.Movie>

@{
    ViewData["Title"] = "ListMovie";
}

<h1>ListMovie</h1>

<p>
    <a asp-controller="Admin" asp-action="AddMoive">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <img style="height: 100px;" src="~/img/@item.Image" alt="Card image cap">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Description)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="EditMovie" asp-route-id="@item.MovieId">Edit</a> |
                <a asp-controller="Admin" asp-action="DeleteMovie" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
